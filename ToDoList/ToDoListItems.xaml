<Window x:Class="ToDoListApp.ToDoListItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListApp"
        mc:Ignorable="d"
        Title="To-Do List Items" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dtgToDoListItems" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="319" Margin="10,55,0,0" VerticalAlignment="Top" Width="541">
            
        </DataGrid>
        <Button x:Name="btnItemUpdate" Content="Update selected item" HorizontalAlignment="Left" Margin="582,183,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="BtnItemUpdate_Click" />
        <Button x:Name="btnAddItem" Content="Add a new item" HorizontalAlignment="Left" Margin="582,134,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="BtnAddItem_Click" />
        <Button x:Name="btnItemDelete" Content="Delete selected item" HorizontalAlignment="Left" Margin="582,231,0,0" VerticalAlignment="Top" Width="135" Height="30" Click="BtnItemDelete_Click" />

    </Grid>
</Window>
